<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:edu.wpi.scheduler.client.tabs">
	<ui:with field='res' type='edu.wpi.scheduler.client.Resources' />

	<ui:style>
		.rightTabs {
			float: right;
			height: 50px;
		}
		
		.rightTabs > button {
			height: 50px;
		}
		
		.topBar {
			border-bottom: 1px solid #000;
			background-color: #c41230;
		}
		
		.topBarNoBottom {
			background-color: #c41230;
		}
		
		.headerTitle{
			color: white;
			font-size: 36px;
			font-family: Arial;
		}
		
		.headerSubTitle{
			color: white;
			font-size: 12px;
			font-family: Arial;
		}
		
		.authorLabel{
			color:white;
			font-size: 12px;
			font-family: Arial;
			font-style: Italic;
		}
		
		.updatedTimestamp{
			color:white;
			font-size: 12px;
			font-family: Arial;
		}
	</ui:style>
	<g:DockLayoutPanel ui:field="layoutPanel">
		<g:north size="50">
			<g:DockLayoutPanel styleName='{style.topBar}'>
				<g:west size="185">
					<g:DockLayoutPanel styleName='{style.topBarNoBottom}'>
						<g:north size="36">
							<g:Label styleName='{style.headerTitle}'>Planner</g:Label>
						</g:north>
						<g:north size="14">
							<g:Label ui:field='yearLabel' styleName='{style.headerSubTitle}'></g:Label>
						</g:north>
					</g:DockLayoutPanel>
				</g:west>
				<g:west size="280">
					<g:DockLayoutPanel styleName='{style.topBarNoBottom}'>
						<g:north size="11">
							<g:Label styleName='{style.authorLabel}'></g:Label>
						</g:north>
						<g:north size="11">
							<g:Label styleName='{style.authorLabel}'></g:Label>
						</g:north>
						<g:north size="14">
							<g:InlineHTML ui:field='oldSchedLink' styleName='{style.updatedTimestamp}'></g:InlineHTML>
						</g:north>
						<g:north size="14">
							<g:Label ui:field='updatedLabel' styleName='{style.updatedTimestamp}'></g:Label>
						</g:north>
					</g:DockLayoutPanel>
				</g:west>
				<g:center>
					<g:SimplePanel>
						<s:TabList styleName='{style.rightTabs}' ui:field="tabList" />
					</g:SimplePanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:center>
			<g:SimplePanel ui:field="bodyPanel"/>
		</g:center> 

	</g:DockLayoutPanel>
</ui:UiBinder> 